{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cpp build active file",
            "command": "/usr/bin/g++",
            "args": [
                "main.cpp",
                "src/python_tokens.cpp",
                "src/python_parser.cpp",
                "src/python_exceptions.cpp",
                "-g",
                "-o",
                "bin/main",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}